<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="ejercicios.gui.ContMaxMinMediaVar">
   <children>
      <Label text="Introduce diez notas:">
         <padding>
            <Insets top="10.0" />
         </padding>
      </Label>
      <HBox alignment="CENTER" prefHeight="66.0" prefWidth="200.0">
         <children>
            <Label fx:id="contadorNotas" text="Nota 1:" />
            <TextField fx:id="nota" prefHeight="26.0" prefWidth="105.0" />
            <Button mnemonicParsing="false" onAction="#addNota" text="Ok" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="19.0" prefWidth="200.0">
         <children>
            <TextArea fx:id="totalNotas" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </TextArea>
         </children>
      </HBox>
      <VBox alignment="CENTER_LEFT" prefHeight="73.0" prefWidth="180.0">
         <children>
            <Label fx:id="max" text="Maxima:" />
            <Label fx:id="min" text="Minima:" />
            <Label fx:id="med" text="Media:" />
            <Label fx:id="var" text="Varianza: " />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
